PORT=4000

# PayPal (sandbox)
PAYPAL_CLIENT_ID=YOUR_PAYPAL_CLIENT_ID
PAYPAL_CLIENT_SECRET=YOUR_PAYPAL_CLIENT_SECRET
PAYPAL_MODE=sandbox   # or "live"

# Safaricom Daraja (sandbox)
MPESA_CONSUMER_KEY=YOUR_CONSUMER_KEY
MPESA_CONSUMER_SECRET=YOUR_CONSUMER_SECRET
MPESA_SHORTCODE=174379         # sandbox shortcode
MPESA_PASSKEY=YOUR_PASSKEY    # sandbox passkey
MPESA_CALLBACK_BASE_URL=https://your-domain.com   # public URL where Safaricom will post callbacks

# Firebase Admin
FIREBASE_SERVICE_ACCOUNT=./serviceAccountKey.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# OPTIONAL: Basic auth for callbacks (recommended)
MPESA_CALLBACK_SECRET=some_shared_secret